
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>企业站后台管理</title>
    <link href="~/lib/manage/css/basic.css" rel="stylesheet" type="text/css">
    <link href="~/lib/manage/css/style.css" rel="stylesheet" type="text/css">
    <!--[if IE]><script src="Scripts/html5.js"></script><![endif]-->
</head>

<body class="bluebg">
    <form action="" method="post" class="login">
        <div class="login_l">
            <div class="login_tip"></div>
            <div class="clearfix">
                <label for="userName">用户名</label>
                <input id="userName" name="userName" class="login_txt">
            </div>
            <div class="clearfix">
                <label for="PasswordFor">密&nbsp;&nbsp;&nbsp;&nbsp;码</label>
                <input id="PasswordFor" name="PasswordFor" class="login_txt">
            </div>
            <div class="clearfix">
                <label for="Verification">验证码</label>
                <input id="Verification" name="Verification" class="login_txt_short">
                <img src="~/api/GetValidateCode" class="login_verificate" onclick="this.src='/api/GetValidateCode?t='+Math.random();">
            </div>
        </div>
        <div class="login_r">
            <div class="clearfix">
                <input type="checkbox" checked="checked" class="floatleft checkbox mt3">
                <span class="floatleft ml4 white f14">记住我</span>
            </div>
            <input type="submit" value="登 录" class="login_btn">
            <input type="reset" value="重 置" class="login_btn">
        </div>
    </form>
</body>
</html>
